<main id="content" role="main" class="bg-light">
  <div class="container space-2 space-top-lg-2 mt-lg-n10">
    <div class="row">
      <div class="col-lg-4">
        <%= render "notes/note_sidebar" %>
      </div>

      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">Create new Note</h5>
          </div>
          <div class="card-body">
            <%= render 'form', note: @note %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<main id="content" role="main" class="bg-light">
  <div class="container space-2 space-top-lg-2 mt-lg-n10">
    <div class="row">
      <div class="col-lg-4">
        <%= render "notes/note_sidebar" %>
      </div>

      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">
              <span>Edit note</span>
              <span>
                | <%= link_to 'Delete', notebook_note_path(@notebook, @note), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
              </span>
              <span>
                | <%= link_to 'Create New Note', new_notebook_note_path(@notebook) %>
              </span>
            </h5>
          </div>
          <div class="card-body">
            <%= render 'form', note: @note %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>


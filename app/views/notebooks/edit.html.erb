<main id="content" role="main" class="bg-light">
  <!-- Breadcrumb Section -->
  <div class="bg-navy">
    <div class="container space-1 space-top-lg-2 space-bottom-lg-3">
      <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-light badge-pill font-size-1 py-3 px-4 mb-3">
        <ol class="breadcrumb breadcrumb-light breadcrumb-no-gutter mb-0">
            <li class="breadcrumb-item"><%= link_to 'My Notebooks', edit_notebook_path(@notebook), class: "text-light text-highlight-light" %></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
          </ol>
      </span>
      </div>
    </div>
  </div>
  </div>
  <!-- End Breadcrumb Section -->

  <div class="container space-2 space-top-lg-0 mt-lg-n10">
    <div class="row">
      <div class="col-lg-4">
        <%= render "notebooks/notebook_sidebar" %>
        <div id="stickyBlockEndPoint"></div>
      </div>

      <div id="stickyBlockStartPoint" class="col-lg-8">
        <div class="js-sticky-block card"
             data-hs-sticky-block-options='{
                   "parentSelector": "#stickyBlockStartPoint",
                   "breakpoint": "md",
                   "startPoint": "#stickyBlockStartPoint",
                   "endPoint": "#stickyBlockEndPoint",
                   "stickyOffsetTop": 12,
                   "stickyOffsetBottom": 12
                 }'>
          <div class="card-header">
            <div class="media-body">
              <h5 class="mb-0 card-title"><i class="fas fa-pencil-alt pt-1 mr-2 text-body"></i>Edit Notebook</h5>
            </div>
            <span>
              <%= link_to 'Create New Notebook', new_notebook_path, class:'btn btn-xs btn-primary mr-1'%>
              <%= link_to 'Delete', @notebook, method: :delete, data: {confirm: 'Are you sure you want to delete?'}, class:'btn btn-xs btn-soft-danger' %>
              </span>
            </h5>
          </div>
          <div class="card-body">
            <%= render 'form', notebook: @notebook %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "jquery_ujs" %>
  <%= javascript_include_tag "libraries/hs-sticky-block.min" %>
  <script type="text/javascript" charset="utf-8">
      $('.js-sticky-block').each(function () {
          new HSStickyBlock($(this)).init();
      });
  </script>
<% end %>


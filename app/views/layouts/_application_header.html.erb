<header id="header" class="header">
  <div class="header-section">
    <div id="logo" class="container">
      <!-- Nav -->
      <nav class="js-mega-menu navbar navbar-expand-lg">
        <!-- Logo -->
        <a class="navbar-brand" href="<%= root_path %>" aria-label="Front">
          <img src="<%= asset_path("logos/logo.svg") %>" alt="Logo">
        </a>
        <!-- End Logo -->

        <!-- Responsive Toggle Button -->
        <button type="button" class="navbar-toggler btn btn-icon btn-sm rounded-circle"
                aria-label="Toggle navigation"
                aria-expanded="false"
                aria-controls="navBarWithBSDropdown"
                data-toggle="collapse"
                data-target="#navBarWithBSDropdown">
          <span class="navbar-toggler-default">
            <svg width="14" height="14" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
              <path fill="currentColor" d="M17.4,6.2H0.6C0.3,6.2,0,5.9,0,5.5V4.1c0-0.4,0.3-0.7,0.6-0.7h16.9c0.3,0,0.6,0.3,0.6,0.7v1.4C18,5.9,17.7,6.2,17.4,6.2z M17.4,14.1H0.6c-0.3,0-0.6-0.3-0.6-0.7V12c0-0.4,0.3-0.7,0.6-0.7h16.9c0.3,0,0.6,0.3,0.6,0.7v1.4C18,13.7,17.7,14.1,17.4,14.1z"/>
            </svg>
          </span>
          <span class="navbar-toggler-toggled">
            <svg width="14" height="14" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
              <path fill="currentColor" d="M11.5,9.5l5-5c0.2-0.2,0.2-0.6-0.1-0.9l-1-1c-0.3-0.3-0.7-0.3-0.9-0.1l-5,5l-5-5C4.3,2.3,3.9,2.4,3.6,2.6l-1,1 C2.4,3.9,2.3,4.3,2.5,4.5l5,5l-5,5c-0.2,0.2-0.2,0.6,0.1,0.9l1,1c0.3,0.3,0.7,0.3,0.9,0.1l5-5l5,5c0.2,0.2,0.6,0.2,0.9-0.1l1-1 c0.3-0.3,0.3-0.7,0.1-0.9L11.5,9.5z"/>
            </svg>
          </span>
        </button>
        <!-- End Responsive Toggle Button -->

        <!-- Navigation -->
        <div id="nav" class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="navbar-nav-item">
              <a class="nav-link" href="<%= root_path %>">Home</a>
            </li>
            <% if current_user.is_admin? %>
              <!-- Dropdown -->
              <li class="hs-has-sub-menu header-nav-item"
                  data-hs-mega-menu-item-options='{
                  "desktop": {
                    "position": "left"
                  }
                }'>
                <a id="admin" class="hs-mega-menu-invoker nav-link nav-link-toggle" href="javascript:;" aria-haspopup="true" aria-expanded="false" aria-labelledby="pagesSubMenu">Admin</a>

                <div id="pagesSubMenu" class="hs-sub-menu dropdown-menu" aria-labelledby="pagesMegaMenu" style="min-width: 230px;">
                  <a class="dropdown-item" href="<%= admin_courses_path(approved: true) %>">Approved Coures</a>
                  <a class="dropdown-item" href="<%= admin_courses_path(approved: false) %>">Unapproved Courses</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="<%= admin_categories_path %>">Categories</a>
                </div>
              </li>
              <!-- End Dropdown -->
            <% end %>
            <!-- Dropdown -->
            <li class="hs-has-sub-menu header-nav-item"
                data-hs-mega-menu-item-options='{
                  "desktop": {
                    "position": "left"
                  }
                }'>
              <a id="courses" class="hs-mega-menu-invoker nav-link nav-link-toggle" href="javascript:;" aria-haspopup="true" aria-expanded="false" aria-labelledby="pagesSubMenu">Courses</a>

              <div id="pagesSubMenu" class="hs-sub-menu dropdown-menu" aria-labelledby="pagesMegaMenu" style="min-width: 230px;">
                <a class="dropdown-item" href="/teaching/courses">My Courses</a>
                <a class="dropdown-item" href="/enrolled_courses">Enrolled Courses</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/teaching/courses/start_journey">Teach A Course</a>
              </div>
            </li>
            <!-- End Dropdown -->

            <!-- Dropdown -->
            <li class="hs-has-sub-menu header-nav-item"
                data-hs-mega-menu-item-options='{
                  "desktop": {
                    "position": "left"
                  }
                }'>
              <a id="acount" class="hs-mega-menu-invoker nav-link nav-link-toggle" href="javascript:;" aria-haspopup="true" aria-expanded="false" aria-labelledby="account">
                <i class="fas fa-user-circle"></i>
                Account Settings
              </a>

              <div id="account" class="hs-sub-menu dropdown-menu" aria-labelledby="pagesMegaMenu" style="min-width: 230px;">
                <a class="dropdown-item" href="<%= details_users_path %>">
                  <i class="fas fa-user-circle dropdown-item-icon"></i>My Account
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="<%= destroy_user_session_path %>"><i class="fas fa-sign-out-alt dropdown-item-icon"></i>Logout</a>
              </div>
            </li>
            <!-- End Dropdown -->
            <!-- Button -->
            <% unless user_signed_in? %>
              <li class="nav-item navbar-nav-last-item">
                <a class="btn btn-sm btn-primary transition-3d-hover" href="<%= new_user_registration_path %>" target="_blank">
                  Join Now
                </a>
              </li>
            <% end %>
            <!-- End Button -->
          </ul>
        </div>
        <!-- End Navigation -->
      </nav>
      <!-- End Nav -->
    </div>
  </div>
</header>






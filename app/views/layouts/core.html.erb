<!DOCTYPE html>
<html>
    <head>
        <title>
            VC Room
        </title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <%= javascript_pack_tag 'Index' %>
        <%= stylesheet_pack_tag 'Index' %>
    </head>

    <body>
     <% if notice %>
          <p class="notice mdc-typography--subtitle1"><%= notice %></p>
     <% end %>
     <% if alert %>
         <p class="alert mdc-typography--subtitle1"><%= alert %></p>
        <% end %>
     <%= yield %>
    </body>
</html>

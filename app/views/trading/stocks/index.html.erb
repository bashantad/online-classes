<table class="table">
	<tr>
		<th> Ticker</th>
		<th> Name </th>
		<th> Website </th>
		<th> Market Cap </th>
		<th> Volume </th>
		<th> Earning history</th>
		<th> Stock price</th>
	</tr>
	<% @stocks.each do |stock| %>
		<tr>
			<td><%= stock.ticker %></td>
			<td><%= stock.name %></td>
			<td><%= stock.website %></td>
			<td><%= stock.market_cap %></td>
			<td><%= stock.volume %></td>
			<td>
				<%= link_to "Earning date history", trading_stock_import_earning_date_history_path(stock) %> (<%= stock.earning_histories.count %>)
			</td>
			<td>
				<%= link_to "Stock price history", trading_stock_import_price_history_path(stock) %> (<%= stock.stock_prices.count %>)
			</td>
		</tr>
	<% end %>
</table>

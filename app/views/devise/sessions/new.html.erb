<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-field">
    <div>Password</div>
    <div class="mdc-text-field mdc-text-field--filled">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mdc-text-field__input' %>
    </div>
  </div>
  <div class="form-field">
    <div>Password</div>
    <div class="mdc-text-field mdc-text-field--filled">
      <%= f.password_field :password, autocomplete: "current-password", class: 'mdc-text-field__input' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mdc-button mdc-button--raised">
    <%= f.submit "Log in", class: 'mdc-button__ripple' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

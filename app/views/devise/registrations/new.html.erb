<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% error_messages = resource.errors.messages %>
  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name" %>
    <% if error_messages[:full_name] %>
      <div class="field-error">
        <%= error_messages[:full_name][0] %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% if error_messages[:email] %>
      <div class="field-error">
        <%= error_messages[:email][0] %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if error_messages[:password] %>
      <div class="field-error">
        <%= error_messages[:password][0] %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% if error_messages[:password_confirmation] %>
      <div class="field-error">
        <%= error_messages[:password_confirmation][0] %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

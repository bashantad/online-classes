<main id="content" role="main">
  <div class="container space-2 space-lg-3">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
      <% error_messages = resource.errors.messages %>
      <div class="js-validate w-md-75 w-lg-50 mx-md-auto">
        <!-- Title -->
        <div class="mb-5 mb-md-7">
          <h1 class="h2 mb-0">Resend confirmation instructions</h1>
        </div>
        <!-- End Title -->

        <!-- Form Group -->
        <div class="js-form-message form-group">
          <label class="input-label" for="email">
             <span class="d-flex justify-content-between align-items-center">
              Enter your email
             </span>
          </label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', placeholder: "Email address", type: 'email', id: 'email', ariaLabel: 'Email address', dataMsg: 'Please enter a valid email address.' %>
          <% if error_messages[:email] %>
            <div class="field-error">
              <%= error_messages[:email][0] %>
            </div>
          <% end %>
        </div>
        <!-- End Form Group -->

        <!-- Button -->
        <div class="row align-items-center mb-5">
          <div class="col-sm-6 mb-3 mb-sm-0">
            <%= link_to "Sign In", new_session_path(resource_name), class: ' text-muted font-size-1 font-weight-bold' %>
          </div>

          <div class="col-sm-6 text-sm-right">
            <%= f.submit "Send", class: "btn btn-primary transition-3d-hover" %>
          </div>
        </div>
        <!-- End Button -->
      </div>
    <% end %>

  </div>
  <!-- End Login Form -->
</main>



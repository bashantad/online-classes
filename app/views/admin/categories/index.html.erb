<%= link_to 'New Category', new_admin_category_path %>
<h1>Categories</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>No of courses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <th><%= category.courses.count %></th>
        <td><%= link_to 'View', admin_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


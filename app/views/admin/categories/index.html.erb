<!-- Hero Section -->
<div class="bg-navy bg-img-hero" >
  <div class="container space-1">
    <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-light badge-pill font-size-1 py-3 px-4 mb-3">Categories</span>
    </div>
  </div>
</div>
<!-- End Hero Section -->

<div class="container space-1">
  <div class="text-right mx-lg-auto space-bottom-1">
    <button type="button" class="btn btn-xs btn-primary">
      <%= link_to 'New Category', new_admin_category_path, class: 'text-white font-weight-bold' %>
      <i class="fas fa-plus ml-1"></i>
    </button>
  </div>
  <!-- Card -->
  <% if @categories.present? %>
    <div class="card mx-lg-auto">
      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-align-middle table-borderless table-thead-bordered table-nowrap">
          <thead class="thead-light">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>No of courses</th>
            <th colspan='3'>Action</th>
          </tr>
          </thead>
          <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= category.title %>
              </td>
              <td><%= category.description %></td>
              <td><%= category.courses.count %></td>
              <td>
                <%= link_to 'View', admin_category_path(category), class: 'btn btn-xs btn-outline-success' %>
              </td>
              <td>
                <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-xs btn-outline-success' %>
              </td>
              <td>
                <%= link_to 'Delete', admin_category_path(category), method: :delete, data: {confirm: 'Are you sure you want to delete this category?'}, class: 'btn btn-xs btn-outline-danger' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <!-- End Table -->
      </div>
      <!-- End Card -->
      <!-- SVG Elements -->
      <figure class="max-w-19rem w-100 position-absolute bottom-0 right-0 z-index-n1">
        <div class="mb-n7 mr-n7">
          <img class="img-fluid" src="<%= asset_path("components/dots-5.svg") %>" alt="Image Description">
        </div>
      </figure>
      <!-- End SVG Elements -->
    </div>
  <% else %>
    <div class="card mx-lg-auto">
      <!-- Search -->
      <div class="container space-2">
        <div class="row justify-content-md-between align-items-md-center pl-4 pr-4">
          <div class="col-md-5 mb-3 mb-md-0 text-align-middle">
            <figure class="max-w-8rem mx-auto">
              <img class="img-fluid" src="/assets/icons/icon-36.svg" alt="SVG">
            </figure>
          </div>

          <div class="col-md-7 col-lg-6">
            <div class="row justify-content-md-between align-items-md-center">
              <div class="col-lg-12  space-bottom-1">
                <h4 class="h5 mb-0 text-muted">Looks Like there are no categories here!</h4>
              </div>
              <div class="col-lg-12 ">
                <form class="input-group input-group-merge">
                  <input type="search" class="form-control" placeholder="Find a course" aria-label="Find a course" aria-describedby="searchApp">
                  <div class="input-group-append">
          <span class="input-group-text" id="searchApp">
            <i class="fas fa-search"></i>
          </span>
                  </div>
                </form>
              </div>
              <div class="col-lg-12 space-top-1 text-right">
                <%= link_to "Go Home", root_path, class: 'font-size-1 btn btn-ghost-primary' %>
              </div>
            </div>
            <!-- Input -->

            <!-- End Input -->
          </div>
        </div>
      </div>
      <!-- End Search -->
    </div>
  <% end %>
</div>


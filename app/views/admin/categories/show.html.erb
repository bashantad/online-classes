<!-- Hero Section -->
<div class="bg-navy bg-img-hero">
  <div class="container space-1 ">
    <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-light badge-pill font-size-1 py-3 px-4 mb-3">
       <nav aria-label="breadcrumb">
         <ol class="breadcrumb breadcrumb-light breadcrumb-no-margin">
          <li class="breadcrumb-item"><a href="<%= admin_categories_path %>" class="text-light text-highlight-light">Category</a></li>
          <li class="breadcrumb-item active" aria-current="page">Detail</li>
        </ol>
        </nav>
      </span>
    </div>
  </div>
</div>
<!-- End Hero Section -->

<div class="container space-1">
  <!-- Card -->
  <div class="card mx-auto w-lg-60 pl-4 pr-4 space-top-1">
    <div class="row">
      <div class="col-12 space-bottom-1">
        <div class="row">
          <div class="col-4 text-muted">Title</div>
          <div class="col-8 text-dark"><%= @category.title %></div>
        </div>
      </div>
      <div class="col-12 space-bottom-1">
        <div class="row">
          <div class="col-4 text-muted">Description</div>
          <div class="col-8 text-dark"><%= @category.description %></div>
        </div>
      </div>
      <div class="col-12 space-bottom-1">
        <div class="row">
          <div class="col-4 text-muted">List Of Courses</div>
          <div class="col-8">
            <% if @category.courses.present? %>
              <div class="table-responsive">
                <table class="table table-align-middle table-bordered table-nowrap">
                  <tbody>
                  <% @category.courses.each do |course| %>
                    <tr>
                      <td>
                        <%= link_to course.title, "/courses/#{course.id}", target: '_blank', class: 'mdc-button mdc-button__label' %>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
                <!-- End Table -->
              </div>
            <% else %>
              Empty
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <!-- Button -->
    <div class="row align-items-center mb-5">
      <div class="col-6 mb-sm-0 pl-4">
        <%= link_to "Back", admin_categories_path, class: 'font-size-1 font-weight-bold text-muted content-centered' %>
      </div>
      <div class="col-6 text-right">
        <%= link_to "Edit", edit_admin_category_path(@category), class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
    <!-- End Button -->
    <!-- SVG Elements -->
    <figure class="max-w-19rem w-100 position-absolute top-0 right-0 z-index-n1 hide-svg">
      <div class="mb-n7 mr-n7">
        <img class="img-fluid" src="<%= asset_path("components/dots-3.svg") %>" alt="Image Description">
      </div>
    </figure>
    <!-- End SVG Elements -->
    <!-- End Card -->
  </div>
</div>

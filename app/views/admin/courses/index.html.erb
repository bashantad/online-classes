<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Website</th>
      <th>Price</th>
      <th>Category</th>
      <th>Is approved?</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
            <%= link_to course.title, course.show_url, target: '_blank' %>
        </td>
        <td><%= course.owner.full_name %></td>
        <td><%= course.website %></td>
        <td>$<%= course.price %></td>
        <td><%= course.category.title %></td>
        <td><%= course.approved_text %></td>
        <td>
            <% if course.approved? %>
              <%= link_to 'Disapprove', admin_course_disapprove_path(course) %>
            <% else %>
              <%= link_to 'Approve', admin_course_approve_path(course) %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

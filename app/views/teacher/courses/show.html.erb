<div class="mdc-card registration-main">
  <h2 class="mdc-typography--headline5 login-title">
    Course Details
  </h2>
  <hr class="mdc-list-divider divider-margin">
  <div class="user-details">
    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
        Image
      </div>
      <div>
        <%= image_tag @course.cover_image %>
      </div>
    </div>
    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
        Title
      </div>
      <div>
        <%= @course.title %>
      </div>
    </div>

    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
        Body
      </div>
      <div>
        <%= @course.body %>
      </div>
    </div>

    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
        Creator
      </div>
      <div>
        <%= @course.owner.full_name %>
      </div>
    </div>

    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
        Website
      </div>
      <div>
        <%= @course.website %>
      </div>
    </div>

    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
       Course
      </div>
      <div>
        <%= @course.course_for %>
      </div>
    </div>

    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
        Price
      </div>
      <div>
        <%= @course.price %>
      </div>
    </div>

    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
       Category
      </div>
      <div>
        <%= @course.category.title %>
      </div>
    </div>

    <div class="mdc-typography--subtitle1 user-fields">
      <div class="field-label">
        Approved
      </div>
      <div>
        <%= @course.approved_text %>
      </div>
    </div>
  </div>


  <div class='btn-main'>
    <%= link_to 'Back', teacher_courses_path, class: 'back secondary-btn float-left' %>
    <button class="mdc-button mdc-button--raised action-btn float-right">
      <%= link_to 'Edit', edit_teacher_course_path(@course), class: 'btn' %>
    </button>
  </div>
</div>

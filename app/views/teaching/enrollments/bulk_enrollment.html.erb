<!-- Hero Section -->
<div class="bg-navy bg-img-hero">
  <div class="container space-1 ">
    <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-light badge-pill font-size-1 py-3 px-4 mb-3">
      <nav aria-label="breadcrumb">
         <ol class="breadcrumb breadcrumb-light breadcrumb-no-margin">
           <li class="breadcrumb-item"><a href="<%= teaching_courses_path %>" class="text-light text-highlight-light">My Courses</a></li>
           <li class="breadcrumb-item"><a href="<%= teaching_course_path(@course) %>" class="text-light text-highlight-light"><%= @course.title %></a></li>
           <li class="breadcrumb-item active" aria-current="page">
              Send Enrollment Request
           </li>
        </ol>
        </nav>
      </span>
    </div>
  </div>
</div>
<!-- End Hero Section -->
<div class="container space-1">
  <div class="card">
    <!-- Table -->
    <div class="table-responsive">
      <%= form_with(url: enroll_users_teaching_course_enrollments_path(@course), local: true) do |form| %>
        <table class="table table-thead-bordered table-nowrap table-align-middle">
          <thead class="thead-light">
          <tr>
            <th>S.N</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
          </tr>
          </thead>
          <tbody>
          <% (0..4).to_a.each do |row| %>
            <tr>
              <td>
                <%= row + 1 %>
              </td>
              <td>
                <input type="text" name="enroll_request[<%= row %>][full_name]" class="form-control">
              </td>
              <td>
                <input type="text" name="enroll_request[<%= row %>][email]" class="form-control">
              </td>
              <td class="mdc-data-table__cell mdc-data-table__cell--numeric">
                <input type="text" name="enroll_request[<%= row %>][phone]" placeholder="Optional" class="form-control">
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <div class="card-footer d-flex justify-content-end">
          <input type="submit" class="btn btn-primary" value="Add" />
        </div>
      <% end %>
      <!-- End Table -->
    </div>
    <!-- End Card -->
    <!-- SVG Elements -->
    <figure class="max-w-13rem w-100 position-absolute bottom-0 right-0 z-index-n1 hide-svg">
      <div class="mb-n7 mr-n7">
        <img class="img-fluid" src="<%= asset_path("components/dots-3.svg") %>" alt="Image Description">
      </div>
    </figure>
    <!-- End SVG Elements -->
  </div>
</div>

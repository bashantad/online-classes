<!-- Hero Section -->
<div class="bg-navy bg-img-hero">
  <div class="container space-1 ">
    <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-light badge-pill font-size-1 py-3 px-4 mb-3">
       <nav aria-label="breadcrumb">
         <ol class="breadcrumb breadcrumb-light breadcrumb-no-margin">
           <li class="breadcrumb-item"><a href="<%= teaching_courses_path %>" class="text-light text-highlight-light">My Courses</a></li>
           <li class="breadcrumb-item"><a href="<%= teaching_course_path(@course) %>" class="text-light text-highlight-light"><%= @course.title %></a></li>
           <li class="breadcrumb-item"><a href="<%= teaching_course_chapter_path(@course, @chapter) %>" class="text-light text-highlight-light"><%= @chapter.title %></a></li>
           <li class="breadcrumb-item active"><%= @assignment.question %></li>
          </ol>
        </nav>
      </span>
    </div>
  </div>
</div>
<!-- End Hero Section -->
<div class="container space-1">
  <%= render "layouts/steps" %>
  <!-- Card -->
  <div class="card mx-auto w-lg-60">
    <div class="card-header">
      <%= @assignment.question %>
      <span>
         <a href="<%= teaching_course_path(@course) %>" class="btn btn-xs btn-no-focus btn-ghost-primary">
           Back
          </a>
      </span>
    </div>
    <div class="card-body">
      <form>
        <!-- Form Group -->
        <div class="row form-group">
          <label for="instructions" class="col-sm-3 col-form-label input-label">Instructions</label>

          <div class="col-sm-9">
            <%= @assignment.instructions %>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div class="row form-group">
          <label for="points" class="col-sm-3 col-form-label input-label">Points</label>

          <div class="col-sm-9">
            <input type="text" class="form-control-plaintext" name="points" id="points" value="<%= @assignment.points %>" readonly>
          </div>
        </div>
        <!-- End Form Group -->

        <div class="row form-group">
          <label for="due_date" class="col-sm-3 col-form-label input-label">Due Date</label>

          <div class="col-sm-9">
            <input type="text" class="form-control-plaintext" name="due_date" id="due_date" value="<%= @assignment.due_date %>" readonly>
          </div>
        </div>
        <!-- End Form Group -->
      </form>

    </div>
  </div>
</div>

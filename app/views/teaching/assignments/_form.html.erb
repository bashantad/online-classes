<%= form_with(model: [:teaching, @course, @chapter, @assignment], local: true) do |form| %>
  <% error_messages = @assignment.errors.messages %>
  <div class="pl-4 pr-4 space-top-1">
    <div class="row">
      <div class="col-sm-12 form-group">
        <label class="input-label" for="full_name"><%= form.label :question %></label>
        <%= form.text_field :question, autofocus: true, autocomplete: "question", class: 'form-control', id: 'question', placeholder: 'Title of the Question'  %>
        <% if error_messages[:question] %>
          <div class="field-error">
            <%= error_messages[:question][0] %>
          </div>
        <% end %>
      </div>

      <div class="col-sm-12 form-group">
        <label class="input-label" for="full_name"><%= form.label :instructions %></label>
        <%= form.rich_text_area :instructions, autofocus: true, autocomplete: "instructions", id: 'instructions', placeholder: 'Detailed instructions about the assignment'  %>
        <% if error_messages[:instructions] %>
          <div class="field-error">
            <%= error_messages[:instructions][0] %>
          </div>
        <% end %>
      </div>

      <div class="col-sm-12 form-group">
        <label class="input-label" for="full_name"><%= form.label :points %></label>
        <%= form.number_field :points, autofocus: true, autocomplete: "points", class: 'form-control', id: 'points', placeholder: 'Total marks on this assessment'  %>
        <% if error_messages[:points] %>
          <div class="field-error">
            <%= error_messages[:points][0] %>
          </div>
        <% end %>
      </div>

      <div class="col-sm-12 form-group">
        <label class="input-label" for="full_name"><%= form.label :due_date %></label>
        <%= form.date_select :due_date, autofocus: true, autocomplete: "due_date", class: 'form-control', id: 'due_date' %>
        <% if error_messages[:due_date] %>
          <div class="field-error">
            <%= error_messages[:due_date][0] %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row align-items-center mb-5 mt-4">
      <div class="col-6 mb-sm-0 pl-4">
        <%= link_to "Back", teaching_course_path(@course), class: 'font-size-1 font-weight-bold text-muted content-centered' %>
      </div>
      <div class="col-6 text-right">
        <%= form.submit "Add", class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<div class="card mb-3 mb-lg-5">
  <div class="card-header">
    <h5 class="card-title">Course Contents</h5>
    <span>
              <a href="<%= new_teaching_course_course_content_path(@course) %>" class="btn btn-xs btn-no-focus btn-primary">
            <i class="fas fa-pen mr-1"></i>
           Add Course Contents
          </a>
            </span>

  </div>

  <!-- Body -->
  <div class="card-body">
    <% if @course_contents.present? %>
      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-thead-bordered table-nowrap table-align-middle">
          <thead class="thead-light">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Course</th>
            <th colspan="2">Action</th>
          </tr>
          </thead>
          <tbody>
          <% @course_contents.each do |course_content| %>
            <tr>
              <td><%= course_content.title %></td>
              <td><%= course_content.description %></td>
              <td><%= course_content.duration %></td>
              <td><%= course_content.course_id %></td>
              <td><%= link_to 'Edit', edit_teaching_course_course_content_path(course_content), class: 'btn btn-xs btn-outline-success' %></td>
              <td><%= link_to 'Delete', teaching_course_course_content_path(course_content), method: :delete, data: {confirm: 'Are you sure delete course content?'}, class: 'btn btn-xs btn-outline-danger' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <!-- End Table -->
      </div>
    <% else %>
      <figure class="max-w-8rem mx-auto">
        <img class="img-fluid" src="
          <% asset_path("icons/icon-67.svg") %>" alt="SVG">
      </figure>
      <div class="text-center mt-2">Contents Empty</div>
    <% end %>
  </div>
</div>




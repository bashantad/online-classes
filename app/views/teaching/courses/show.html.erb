<!-- Hero Section -->
<div class="bg-navy bg-img-hero">
  <div class="container space-1 ">
    <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-light badge-pill font-size-1 py-3 px-4 mb-3">
      <nav aria-label="breadcrumb">
         <ol class="breadcrumb breadcrumb-light breadcrumb-no-margin">
          <li class="breadcrumb-item"><a href="/teaching/courses" class="text-light text-highlight-light">Course</a></li>
          <li class="breadcrumb-item">Details</li>
        </ol>
        </nav>
      </span>
    </div>
  </div>
</div>
<!-- End Hero Section -->
<div class="container space-1">
  <!-- Card -->
  <div class="card mb-3 mb-lg-5">
    <div class="card-header">
      <h5 class="card-title">Course Details</h5>
      <span>
              <a href="<%= edit_teaching_course_path(@course) %>" class="btn btn-xs btn-no-focus btn-primary">
            <i class="fas fa-pen mr-1"></i>
           Edit Course
          </a>
         <a href="<%= teaching_courses_path %>" class="btn btn-xs btn-no-focus btn-ghost-primary">
           Back
          </a>
            </span>

    </div>

    <!-- Body -->
    <div class="card-body">
      <div class="row">
        <!-- Form Group -->
          <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Image</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext"> <%= image_tag @course.cover_image if @course.cover_image.attached? %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
          <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Title</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext"> <%= @course.title %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
          <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Body</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext"> <%= @course.body %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Creator</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext">  <%= @course.owner.full_name %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
          <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Website</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext"><%= @course.website %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Course</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext"><%= @course.course_for %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Price</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext"><%= @course.price %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Category</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext"> <%= @course.category.title %></span>
          </div>
        </div>
        <!-- End Form Group -->

        <!-- Form Group -->
        <div class="col-md-6 col-sm-12 form-group">
          <label class="col-sm-3 col-form-label input-label">Approved</label>

          <div class="col-sm-9">
            <span class="form-control-plaintext">   <%= @course.approved_text %></span>
          </div>
        </div>
        <!-- End Form Group -->

      </div>
    </div>
    <!-- End Body -->
    <!-- SVG Elements -->
    <figure class="max-w-19rem w-100 position-absolute bottom-0 right-0 z-index-n1">
      <div class="mb-n7 mr-n7">
        <img class="img-fluid" src="<%= asset_path("components/dots-3.svg") %>" alt="Image Description">
      </div>
    </figure>
    <!-- End SVG Elements -->
  </div>
  <!-- End Card -->
  <%= render "teaching/course_contents/index" %>
</div>


<div class="bg-primary bg-img-hero" style="background-image: url(/assets/components/abstract-shapes-12.svg);">
  <div class="container space-2 space-lg-3">
    <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-primary badge-pill font-size-1 py-3 px-4 mb-3">List of courses</span>
    </div>
  </div>
</div>
<div class="container space-2">
  <div class="text-right mx-lg-auto space-bottom-1">
    <button type="button" class="btn btn-xs btn-primary">
      <%= link_to 'Add New Course', new_teaching_course_path, class: 'text-white font-weight-bold' %>
      <i class="fas fa-plus ml-1"></i>
    </button>
  </div>  <!-- Card -->
  <% if @courses.present? %>
    <div class="card mx-lg-auto">
      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-borderless table-thead-bordered table-nowrap table-align-middle">
          <thead class="thead-light">
          <tr>
            <th>Title</th>
            <th>User</th>
            <th>Website</th>
            <th>Price</th>
            <th>Category</th>
            <th>Is approved?</th>
            <th colspan='3'>Action</th>
          </tr>
          </thead>
          <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td>
                <%= link_to course.title, course.show_url, :target => "_blank", class: 'text-body' %>
              </td>
              <td><%= course.owner.full_name %></td>
              <td><%= course.website %></td>
              <td><%= course.price %></td>
              <td><%= course.category.title %></td>
              <td><span class="badge badge-soft-secondary custom-align-center"><%= course.approved_text %></span></td>
              <td>
                <%= link_to 'View', teaching_course_path(course), class: 'btn btn-xs btn-outline-success' %>
              </td>
              <td>
                <%= link_to 'Edit', edit_teaching_course_path(course), class: 'btn btn-xs btn-outline-success' %>
              </td>
              <td>
                <%= link_to 'Delete',  teaching_course_path(course), method: :delete, data: {confirm: 'Are you sure you want to delete this course?'}, class: 'btn btn-xs btn-outline-danger' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <!-- End Table -->
      </div>
      <!-- End Card -->
    </div>
  <% else %>
    <div class="card mx-lg-auto">
      <!-- Search -->
      <div class="container space-2">
        <div class="row justify-content-md-between align-items-md-center pl-4 pr-4">
          <div class="col-md-5 mb-3 mb-md-0 text-align-middle">
            <figure class="max-w-8rem mx-auto">
              <img class="img-fluid" src="/assets/icons/icon-36.svg" alt="SVG">
            </figure>
          </div>

          <div class="col-md-7 col-lg-6">
            <div class="row justify-content-md-between align-items-md-center">
              <div class="col-lg-12  space-bottom-1">
                <h4 class="h5 mb-0 text-muted">Looks Like there are no courses here!</h4>
              </div>
              <div class="col-lg-12 ">
                <button type="button" class="btn btn-xs btn-primary">
                  <%= link_to 'Add New Course', new_teaching_course_path, class: 'text-white font-weight-bold' %>
                  <i class="fas fa-plus ml-1"></i>
                </button>
              </div>
              <div class="col-lg-12 space-top-1 text-right">
                <%= link_to "Go Home", root_path, class: 'font-size-1 btn btn-ghost-primary' %>
              </div>
            </div>
            <!-- Input -->

            <!-- End Input -->
          </div>
        </div>
      </div>
      <!-- End Search -->
    </div>
  <% end %>
</div>


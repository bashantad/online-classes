<!-- Hero Section -->
<div class="bg-navy bg-img-hero">
  <div class="container space-1 ">
    <div class="w-lg-65 text-center mx-lg-auto">
      <span class="badge badge-soft-light badge-pill font-size-1 py-3 px-4 mb-3">
      <nav aria-label="breadcrumb">
         <ol class="breadcrumb breadcrumb-light breadcrumb-no-margin">
          <li class="breadcrumb-item"><a href="/teaching/courses" class="text-light text-highlight-light">Courses</a></li>
          <li class="breadcrumb-item">Enrollment Requests</li>
          <li class="breadcrumb-item active" aria-current="page"> <%= @course.title %></li>
        </ol>
        </nav>
      </span>
    </div>
  </div>
</div>
<!-- End Hero Section -->
<div class="container space-1">
  <div class="text-right mx-lg-auto space-bottom-1">
    <button type="button" class="btn btn-xs btn-primary">
      <%= link_to 'Send Enrollment Request', teaching_course_enrollment_path(@course), class: 'text-white font-weight-bold' %>
      <i class="fas fa-paper-plane ml-1"></i>
    </button>
  </div>  <!-- Card -->

  <% if @enroll_user_requests.present? %>
    <div class="card">
      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-thead-bordered table-nowrap table-align-middle">
          <thead class="thead-light">
          <tr>
            <th>S.N</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
          <% @enroll_user_requests.each_with_index do |enroll_request, index| %>
            <tr>
              <td> <%= index + 1 %></td>
              <td> <%= enroll_request.full_name %></td>
              <td> <%= enroll_request.email %></td>
              <td> <%= enroll_request.phone %></td>
              <td> <%= enroll_request.user ? 'Accepted' : 'Not accepted' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <!-- End Table -->
      </div>
      <!-- End Card -->
      <!-- SVG Elements -->
      <figure class="max-w-13rem w-100 position-absolute bottom-0 right-0 z-index-n1">
        <div class="mb-n7 mr-n7">
          <img class="img-fluid" src="<%= asset_path("components/dots-3.svg") %>" alt="Image Description">
        </div>
      </figure>
      <!-- End SVG Elements -->
    </div>
  <% else %>
    <div class="card mx-lg-auto mt-3">
      <!-- Search -->
      <div class="container space-2">
        <div class="row justify-content-md-between align-items-md-center pl-4 pr-4">
          <div class="col-md-5 mb-3 mb-md-0 text-align-middle">
            <figure class="max-w-8rem mx-auto">
              <img class="img-fluid" src="<%= asset_path("icons/icon-15.svg") %>" alt="SVG">
            </figure>
          </div>

          <div class="col-md-7 col-lg-6">
            <div class="row justify-content-md-between align-items-md-center">
              <div class="col-lg-12  space-bottom-1">
                <h4 class="h5 mb-0 text-muted">Oops! Looks Like there are no enrollment request.</h4>
              </div>
              <div class="col-lg-12 text-left">
                <%= link_to "Go Back", '/teaching/courses', class: 'font-size-1 btn btn-soft-primary' %>
              </div>
            </div>
            <!-- Input -->

            <!-- End Input -->
          </div>
        </div>
      </div>
      <!-- SVG Elements -->
      <figure class="max-w-19rem w-100 position-absolute bottom-0 right-0 z-index-n1">
        <div class="mb-n7 mr-n7">
          <img class="img-fluid" src="<%= asset_path("components/dots-3.svg") %>" alt="Image Description">
        </div>
      </figure>
      <!-- End SVG Elements -->
      <!-- End Search -->
    </div>
  <% end %>
</div>

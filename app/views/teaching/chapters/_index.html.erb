<div class="card mb-3 mb-lg-5">
  <div class="card-header">
    <h5 class="card-title">
      Chapters
    </h5>
    <span>
        <a href="<%= new_teaching_course_chapter_path(@course) %>" class="btn btn-xs btn-no-focus btn-primary">
          <i class="fas fa-pen mr-1"></i>
           Add New Chapter
        </a>
    </span>
  </div>
  <div class="card-body">
    <% @chapters.each do |chapter| %>
      <div id="basicsAccordion">
        <div class="card mb-3">
          <div class="card-header card-collapse" id="basicsHeadingOne">
            <div class="row col-12">
              <div class="col-lg-7 col-sm-12">
                <div class="btn btn-block card-btn d-flex justify-content-between p-3"
                     data-toggle="collapse"
                     data-target="#basicsCollapseOne"
                     aria-expanded="true"
                     aria-controls="basicsCollapseOne">
                   <span class="card-btn-toggle mt-1 pt-2">
                  <span class="card-btn-toggle-default">+</span>
                  <span class="card-btn-toggle-active">âˆ’</span>
                </span>
                  <div class="media-body ml-3 align-items-center row">
                    <div class="col-12"><h3 class="mb-0"><%= chapter.title %></h3>
                      <small class="d-block smal text-cap"><%= pluralize(chapter.course_contents.count, 'lecture') %></small>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-5  col-sm-12">
                <div style="text-align: end">
                  <p class="mb-md-2 mr-3">
                    <%= link_to "Add new content for #{chapter.title}", new_teaching_course_chapter_course_content_path(@course, chapter), class: 'btn btn-xs btn-outline-primary mr-2 mt-4' %>
                    <%= link_to 'Edit', edit_teaching_course_chapter_path(@course, chapter), class: 'btn btn-xs btn-soft-success mt-4' %>
                    <%#= link_to 'View', teaching_course_chapter_path(@course, chapter), class: 'btn btn-xs btn-soft-success' %>
                    <%= link_to 'Delete', teaching_course_chapter_path(@course, chapter), method: :delete, data: {confirm: 'Are you sure you want to delete this chapter?'}, class: 'btn btn-xs btn-soft-danger mt-4' %>
                  </p></div>
              </div>
            </div>

          </div>
          <div id="basicsCollapseOne" class="collapse"
               aria-labelledby="basicsHeadingOne"
               data-parent="#basicsAccordion">
            <div>
              <%= render "teaching/course_contents/index", :course_contents => chapter.course_contents, :chapter => chapter %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

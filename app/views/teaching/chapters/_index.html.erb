<div class="card mb-3 mb-lg-5">
  <div class="card-header">
    <h5 class="card-title">

      </i>Chapters
    </h5>
    <span>
        <a href="<%= new_teaching_course_chapter_path(@course) %>" class="btn btn-xs btn-no-focus btn-primary">
          <i class="fas fa-plus mr-1"></i>
           Add New Chapter
        </a>
    </span>
  </div>
  <div class="card-body">
    <% @chapters.each do |chapter| %>
      <div id="basicsAccordion">
        <div class="border mb-3">
          <div class="card-header p-3">
            <div class="media-body ml-3">
              <h4 class="mb-0"><%= chapter.title %></h4>
              <small class="d-block smal text-cap"><%= pluralize(chapter.course_contents.count, 'lecture') %></small>
            </div>
            <span>
             <%= link_to "View", teaching_course_chapter_path(@course, chapter), class: 'btn btn-xs btn-soft-success' %>
              <%= link_to 'Edit', edit_teaching_course_chapter_path(@course, chapter), class: 'btn btn-xs btn-soft-success ' %>
              <%= link_to 'Delete', teaching_course_chapter_path(@course, chapter), method: :delete, data: {confirm: 'Are you sure you want to delete this chapter?'}, class: 'btn btn-xs btn-soft-danger' %>
            </span>
          </div>
          <div>
            <%= render "teaching/chapters/chapter_block", :chapter => chapter %>
          </div>
        </div>
      </div>
      <div class="text-center mb-4">
        <span class="divider divider-text"></span>
      </div>
    <% end %>
  </div>
</div>

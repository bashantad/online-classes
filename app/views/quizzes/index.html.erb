<div class="container space-top-2">
  <!-- Learn Section -->
  <div class="space-1">
    <!-- Title -->
    <div class="w-md-75 w-lg-50 text-center mx-md-auto mb-5 mb-md-9">
      <h2 class="h1">Online Quiz</h2>
      <p>Test Your Students</p>
    </div>
    <!-- End Title -->

    <div class="w-lg-75 mx-md-auto">
      <!-- Step -->
      <ul class="step step-md step-centered">
        <li class="step-item">
          <div class="step-content-wrapper">
            <span class="step-icon step-icon-sm step-icon-soft-primary step-icon-pseudo"></span>
            <div class="step-content">
              <h3>Create</h3>
              <p>Create your own personalized quiz.</p>
            </div>
          </div>
        </li>

        <li class="step-item">
          <div class="step-content-wrapper">
            <span class="step-icon step-icon-sm step-icon-soft-primary step-icon-pseudo"></span>
            <div class="step-content">
              <h3>Publish</h3>
              <p>Share it with your students.</p>
            </div>
          </div>
        </li>

        <li class="step-item">
          <div class="step-content-wrapper">
            <span class="step-icon step-icon-sm step-icon-soft-primary step-icon-pseudo"></span>
            <div class="step-content">
              <h3>Get Feedback</h3>
              <p>Annalyze how your students are doing.</p>
            </div>
          </div>
        </li>
      </ul>
      <!-- End Step -->
    </div>
  </div>

  <!-- End Learn Section -->
  <div class="bg-light rounded overflow-hidden space-top-2 space-top-lg-1 p-4 mt-2">
    <div class='mx-auto'>
      <!-- Step Form -->
      <form class="js-step-form container mx-6 mx-auto"
            data-hs-step-form-options='{
        "progressSelector": "#basicStepFormProgress",
        "stepsSelector": "#basicStepFormContent"
      }'>
        <!-- Step -->
        <ul id="basicStepFormProgress" class="js-step-progress step step-md step-inline">
          <li class="step-item">
            <div class="step-content-wrapper">
              <span class="step-icon step-icon-soft-primary">1</span>
              <div class="step-content">
                <span class="step-inline-title">Create Quiz</span>
              </div>
            </div>
          </li>

          <li class="step-item">
            <div class="step-content-wrapper">
              <span class="step-icon step-icon-soft-primary">2</span>
              <div class="step-content">
                <span class="step-inline-title">Preview</span>
              </div>
            </div>
          </li>
        </ul>
        <!-- End Step -->

        <!-- Content Step Form -->
        <div id="basicStepFormContent" class="rounded p-4">
          <div id="basicSelectStepOne" class="active">
            <div class="js-add-field row form-group"
                 data-hs-add-field-options='{
                            "template": "#addQuestionTemplate",
                            "container": "#addQuestionContainer",
                            "defaultCreated": 0
                          }'>
              <div class="col-sm-12 mx-auto mb-2">
                <input type="text" class="form-control" name="question"
                       id="question"
                       placeholder="Question" aria-label="Question"/>

                <input type="text" class="form-control mt-1" name="answer"
                       id="answer"
                       placeholder="Answer" aria-label="Answer"/>

                <div id="addQuestionContainer"></div>

                <a class="js-create-field form-link btn btn-xs btn-no-focus btn-ghost-primary">
                  <i class="fas fa-plus mr-1"></i>
                  Add More
                </a>
              </div>
            </div>

            <div id="addQuestionTemplate" style='display:none' class="mb-2">
              <div class="input-group-add-field">
                <input type="text" class="form-control" name="question"
                       id="question"
                       placeholder="Question" aria-label="Question"/>

                <input type="text" class="form-control mt-1" name="answer"
                       id="answer"
                       placeholder="Answer" aria-label="Answer"/>

                <a class="js-delete-field input-group-add-field-delete" href="#">
                  <i class="fas fa-times"></i>
                </a>
              </div>
            </div>
            <div class="d-flex justify-content-end">
              <button type="button" class="btn btn-sm btn-primary transition-3d-hover mr-1"
                      data-hs-step-form-next-options='{
                  "targetSelector": "#basicSelectStepTwo"
                }'>Next
              </button>
            </div>
          </div>

          <div id="basicSelectStepTwo" style="display: none;">
            <div class="col-sm-12 mx-auto mb-4">
              <input type="text" class="form-control" name="question"
                     id="question"
                     placeholder="Question" aria-label="Question" disabled/>

              <input type="text" class="form-control mt-1" name="answer"
                     id="answer"
                     placeholder="Answer" aria-label="Answer" disabled/>

            </div>

            <div class="d-flex justify-content-end">
              <a class="btn btn-sm btn-soft-secondary transition-3d-hover mr-1" href="javascript:;"
                 data-hs-step-form-prev-options='{
             "targetSelector": "#basicSelectStepOne"
           }'>Back</a>
              <button type="button" class="btn btn-sm btn-primary transition-3d-hover"
                      data-hs-step-form-next-options='{
                  "targetSelector": "#basicSelectStepThree"
                }'>Next
              </button>
            </div>
          </div>

        </div>
        <!-- End Content Step Form -->
      </form>
      <!-- End Step Form -->
    </div>
  </div>
</div>